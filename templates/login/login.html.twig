{% extends 'base.html.twig' %}

{% block title %}Connexion - EcoRide{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    {% if app.user %}
        <div class="alert alert-info text-center">
            Vous êtes déjà connecté en tant que {{ app.user.pseudo }},
            <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <h2 class="text-center mb-4">Connexion à votre compte</h2>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            {% if error %}
                <div class="alert alert-danger text-center">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post">
                <div class="mb-4">
                    <label for="inputEmail" class="form-label">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" required autofocus>
                </div>

                <div class="mb-4">
                    <label for="inputPassword" class="form-label">Mot de passe</label>
                    <input type="password" name="_password" id="inputPassword" class="form-control" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <input type="checkbox" name="_remember_me" id="_remember_me">
                        <label for="_remember_me">Remember me</label>
                    </div>
                #}
                
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-ecoride btn-ecoride-primary px-4 py-2">
                        Se connecter
                    </button>
                </div>
            </form>

            <p class="text-center mt-3">
                Pas encore de compte ?
                <a href="{{ path('app_register') }}">Créer un compte</a>
            </p>
        </div>
    </div>
</div>
{% endblock %}


