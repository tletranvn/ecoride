{% extends 'base.html.twig' %}

{% block title %}Ajouter un véhicule - EcoRide{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <h2 class="text-center mb-4">Ajouter un véhicule</h2>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.marque) }}
                {{ form_widget(form.marque, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.marque) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.modele) }}
                {{ form_widget(form.modele, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.modele) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.immatriculation) }}
                {{ form_widget(form.immatriculation, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.immatriculation) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.typeEnergie) }}
                {{ form_widget(form.typeEnergie, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.typeEnergie) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.places) }}
                {{ form_widget(form.places, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.places) }}
            </div>

            <div class="form-check mb-3">
                {{ form_widget(form.preferFumeur, {'attr': {'class': 'form-check-input', 'id': 'fumeur'}}) }}
                <label class="form-check-label" for="fumeur">
                    Fumeur accepté
                </label>
                {{ form_errors(form.preferFumeur) }}
            </div>

            <div class="form-check mb-3">
                {{ form_widget(form.preferChien, {'attr': {'class': 'form-check-input', 'id': 'animaux'}}) }}
                <label class="form-check-label" for="animaux">
                    Animaux acceptés
                </label>
                {{ form_errors(form.preferChien) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.preferencesLibres) }}
                {{ form_widget(form.preferencesLibres, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                {{ form_errors(form.preferencesLibres) }}
            </div>

            <div class="text-center mt-4 mb-3">
                <button type="submit" class="btn btn-ecoride btn-ecoride-primary px-4 py-2">
                    Enregistrer
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
