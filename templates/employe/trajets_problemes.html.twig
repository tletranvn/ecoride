{% extends 'base.html.twig' %}

{% block title %}Trajets probl√©matiques{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2>üö® Trajets signal√©s comme probl√©matiques</h2>

    {% if avisProblemes is empty %}
        <div class="alert alert-info">Aucun trajet signal√© comme probl√©matique pour le moment.</div>
    {% else %}
        <table class="table table-bordered mt-4">
            <thead>
                <tr>
                    <th># Trajet</th>
                    <th>Chauffeur</th>
                    <th>Passager</th>
                    <th>Date</th>
                    <th>Villes</th>
                    <th>Commentaire</th>
                </tr>
            </thead>
            <tbody>
                {% for avis in avisProblemes %}
                    {% if avis.trajet and avis.auteur and avis.cible %}
                        <tr>
                            <td>{{ avis.trajet.id }}</td>
                            <td>
                                {{ avis.cible.pseudo ?? 'N/A' }}<br>
                                <small>{{ avis.cible.email ?? 'N/A' }}</small>
                            </td>
                            <td>
                                {{ avis.auteur.pseudo ?? 'N/A' }}<br>
                                <small>{{ avis.auteur.email ?? 'N/A' }}</small>
                            </td>
                            <td>{{ avis.trajet.dateDepart ? avis.trajet.dateDepart|date('d/m/Y H:i') : 'N/A' }}</td>
                            <td>{{ avis.trajet.villeDepart ?? 'N/A' }} ‚Üí {{ avis.trajet.villeArrivee ?? 'N/A' }}</td>
                            <td>{{ avis.commentaire ?? '-' }}</td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}
