{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau trajet - EcoRide{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <h2 class="text-center mb-4">Créer un nouveau trajet</h2>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.villeDepart) }}
                {{ form_widget(form.villeDepart, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.villeDepart) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.villeArrivee) }}
                {{ form_widget(form.villeArrivee, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.villeArrivee) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.dateDepart) }}
                {{ form_widget(form.dateDepart, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateDepart) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.placesTotal) }}
                {{ form_widget(form.placesTotal, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.placesTotal) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.prix) }}
                {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.prix) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.vehicule) }}
                {{ form_widget(form.vehicule, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.vehicule) }}
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-ecoride btn-ecoride-primary px-4 py-2">
                    Valider le trajet
                </button>
            </div>

            <!-- Liste déroulante des villes suggérées -->
            <datalist id="villes">
                <option value="Paris">
                <option value="Lyon">
                <option value="Marseille">
                <option value="Toulouse">
                <option value="Nice">
                <option value="Nantes">
                <option value="Strasbourg">
                <option value="Montpellier">
                <option value="Bordeaux">
                <option value="Lille">
            </datalist>

            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
